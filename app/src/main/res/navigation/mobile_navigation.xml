<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_offers">

    <fragment
        android:id="@+id/navigation_offers"
        android:name="pl.aib.fortfrem.ui.offers.OffersFragment"
        android:label="@string/offers_tab_title"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_favourites"
        android:name="pl.aib.fortfrem.ui.favourites.FavouritesFragment"
        android:label="@string/favourites_tab_title"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_preferences"
        android:name="pl.aib.fortfrem.ui.preferences.PreferencesFragment"
        android:label="@string/Preferences_tab_title"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_preferences_to_tabShops"
            app:destination="@id/tabShops" />
        <action
            android:id="@+id/action_navigation_preferences_to_tabSubcategories"
            app:destination="@id/tabSubcategories" />
        <action
            android:id="@+id/action_navigation_preferences_to_tabCategories"
            app:destination="@id/tabCategories" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="pl.aib.fortfrem.ui.profile.ProfileFragment"
        android:label="@string/profile_tab_title"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="pl.aib.fortfrem.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/tabCategories"
        android:name="pl.aib.fortfrem.ui.preferences.tabCategories.TabCategories"
        android:label="tab_categories_fragment"
        tools:layout="@layout/tab_categories_fragment" >
        <action
            android:id="@+id/action_tabCategories_to_categoriesFragment"
            app:destination="@id/categoriesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/tabCategories"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/tabShops"
        android:name="pl.aib.fortfrem.ui.preferences.tabShops.TabShops"
        android:label="tab_shops_fragment"
        tools:layout="@layout/tab_shops_fragment" >
        <action
            android:id="@+id/action_tabShops_to_categoriesFragment"
            app:destination="@id/categoriesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/tabShops"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/tabSubcategories"
        android:name="pl.aib.fortfrem.ui.preferences.tabSubcategories.TabSubcategories"
        android:label="tab_subcategories_fragment"
        tools:layout="@layout/tab_subcategories_fragment" >
        <action
            android:id="@+id/action_tabSubcategories_to_categoriesFragment"
            app:destination="@id/categoriesFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@+id/tabSubcategories"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="pl.aib.fortfrem.ui.preferencesCategory.CategoriesFragment"
        android:label="Dodaj preferencjÄ™"
        tools:layout="@layout/fragment_categories" />
</navigation>